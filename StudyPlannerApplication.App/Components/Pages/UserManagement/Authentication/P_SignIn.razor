            <a href="javascript:void(0);" @onclick='() => ChangeLanguage("en-US")'>
            ENG
            </a>

            <a href="javascript:void(0);" @onclick='() => ChangeLanguage("my-MM")'>
            MYA
            </a>
            </div> *@
        </div>
    </div>

</div>

